@model CreateAboutDto
@{
    ViewData["Title"] = "CreateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid"> 
        <div class="row">
            <div class="col-xl-12">                
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Banner Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">
                            Banner alanına veri girişini aşağıdaki panelden yapabilirsiniz. Tasarımda bozulma olamaması adına yeni bir banner girişi yaptıktan sonra önceki banner alanını silin, sadece 1 tane banner verisi kalmalıdır. 
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="title" placeholder="Başlık Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="description" placeholder="Açıklama Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoUrl">Video Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="imageUrl" placeholder="Video Açıklama Girişi Yapınız">
                            </div> 
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Banner Bilgisini Kaydet</button>
                        </form>
                    </div>
                </div>              
            </div> 
        </div> 
    </div>
</div>