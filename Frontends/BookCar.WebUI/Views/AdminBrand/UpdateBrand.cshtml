@model UpdateBrandDto
@{
    ViewData["Title"] = "UpdateBrand";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">                
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araç Markası Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Araç ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak aracı güncelleyebilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" asp-for="BrandID" />                             
                            <div class="form-group">
                                <label for="exampleInputModel">Marka Adı</label>
                                <input type="text" class="form-control" id="exampleInputModel" asp-for="Name" placeholder="Model Girişi Yapınız">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Aracı Güncelle</button>
                        </form>
                    </div>
                </div>             
            </div>
        </div>
    </div>
</div>